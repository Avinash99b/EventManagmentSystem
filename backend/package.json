{
  "name": "event-management-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --runInBand",
    "test:db": "docker-compose up -d db",
    "test:db:down": "docker-compose down -v"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "get-port": "^7.1.0",
    "jest": "^30.2.0",
    "pg": "^8.11.0",
    "ts-jest": "^29.4.5"
  },
  "type": "module",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.5.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}
